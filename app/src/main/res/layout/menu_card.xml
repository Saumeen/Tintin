<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/menu_card_view_menucard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="top"
        android:layout_margin="5dp"

        card_view:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/group"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView2"
                card_view:srcCompat="@drawable/group" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/tiffin"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/menu"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Menu:"
                android:textColor="@color/colorTextBlack"
                android:textSize="18dp"
                card_view:layout_constraintStart_toEndOf="@+id/imageView4"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_wrapHeight="60"
                tools:layout_conversion_wrapWidth="780" />

            <TextView
                android:id="@+id/card_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Cost"
                android:textColor="@color/gray4"
                android:textSize="16dp"
                card_view:layout_constraintStart_toEndOf="@+id/imageView2"
                card_view:layout_constraintTop_toBottomOf="@+id/card_menu"
                tools:layout_conversion_wrapHeight="71"
                tools:layout_conversion_wrapWidth="777" />

            <TextView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Type"
                android:textColor="@color/gray3"
                android:textSize="14dp"
                card_view:layout_constraintStart_toEndOf="@+id/imageView5"
                card_view:layout_constraintTop_toBottomOf="@+id/card_quant"
                tools:layout_conversion_wrapHeight="71"
                tools:layout_conversion_wrapWidth="777" />

            <TextView
                android:id="@+id/card_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Quantity"
                android:textColor="@color/gray3"
                android:textSize="16dp"
                card_view:layout_constraintStart_toEndOf="@+id/imageView6"
                card_view:layout_constraintTop_toBottomOf="@+id/card_cost"
                tools:layout_conversion_wrapHeight="71"
                tools:layout_conversion_wrapWidth="777" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rupee"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView4" />


            <Button
                android:id="@+id/card_remove"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="@color/colorPrimaryDark"

                android:text="Remove"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_wrapHeight="126"
                tools:layout_conversion_wrapWidth="310" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>